<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.n1technology.app.exampreparationnetwork.notice.NoticeActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/notice_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/notice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2074/12/10"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/notice_toolbar_layout"
        android:id="@+id/notice_date"
        android:layout_marginTop="10dp"
        android:padding="2dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notice_date"
        android:textColor="#000"
        android:padding="4dp"
        android:textSize="20dp"
        android:text="Notice title should apper "
        android:layout_marginTop="10dp"
        android:id="@+id/notice_title"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_body"
        android:layout_below="@+id/notice_title"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
